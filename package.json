{
  "name": "urbandrive-server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start:dev": "scripts/start-dev.sh",
    "dev": "ts-node-dev index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",

    "check-db": "ts-node utils/check-db.ts",

    "smoke:local": "scripts/smoke.sh local",
    "smoke:ngrok": "scripts/smoke.sh ngrok",
    "smoke:strict": "ts-node tests/smoke_strict.ts",

    "health:local": "curl -sf http://localhost:3001/health && echo ' OK'",
    "health:ngrok": "BASE=$(curl -s http://127.0.0.1:4040/api/tunnels | sed -n 's/.*\"public_url\":\"\\(https:[^\"]*\\)\".*/\\1/p' | head -n1); echo BASE=$BASE; curl -i \"$BASE/health\""
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
